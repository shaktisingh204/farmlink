
{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".indexOn": ["role"],
      "$uid": {
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "produce": {
      ".indexOn": ["farmerId"],
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "orders": {
      ".indexOn": ["farmerId", "retailerId"],
      ".read": "auth != null",
      ".write": "auth != null",
      "$orderId": {
        ".validate": "newData.hasChildren(['produceId', 'farmerId', 'retailerId', 'quantity', 'totalPrice', 'status', 'orderDate']) && newData.child('orderDate').isString()"
      }
    },
    "favorites": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "alerts": {
       ".indexOn": ["userId"],
       ".read": "auth != null",
       ".write": "auth != null"
    },
    "contactMessages": {
      ".read": "auth != null",
      ".write": true,
      "$messageId": {
        ".validate": "newData.hasChildren(['name', 'email', 'message', 'timestamp'])"
      }
    }
  }
}
